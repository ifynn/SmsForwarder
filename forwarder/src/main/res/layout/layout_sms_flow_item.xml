<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sms_flow_item_bg"
    android:orientation="vertical"
    tools:layout_marginLeft="20dp"
    tools:layout_marginTop="40dp"
    tools:layout_width="160dp">

    <TextView
        android:id="@+id/tv_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:text="10086"
        android:textColor="@color/qmui_config_color_gray_2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:background="@color/qmui_config_color_gray_9"/>

    <TextView
        android:id="@+id/tv_sms_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="30dp"
        android:text="111246"
        android:textColor="@color/colorPrimary"
        android:textIsSelectable="true"
        android:textSize="22sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:autoLink="all"
        android:text="请勿在任何短信或邮件连接中输入验证码，否则可能导致账户被盗"
        android:textColor="@color/qmui_config_color_gray_3"
        android:textIsSelectable="true"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_sms_code_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="2dp"
        android:text="验证码"
        android:textColor="@color/qmui_config_color_gray_8"
        android:textSize="10sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_watch_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:paddingBottom="5dp"
        android:text="查看详情 >>"
        android:textColor="@color/qmui_s_link_color"
        android:textSize="11sp"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2018/01/23 09:19"
            android:textColor="@color/qmui_config_color_gray_6"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_slot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="right"
            android:textColor="@color/qmui_config_color_gray_6"
            android:textSize="10sp"
            tools:text=" [卡1]"/>
    </LinearLayout>

</LinearLayout>